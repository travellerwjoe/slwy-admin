{
    "extends": "standard",
    "installedESLint": true,
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [ "html", "standard" ],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        // "quotes": ["error", "single"],
        "semi": [ 0, "never"],
        "no-console": "warn",
        "no-empty": 2,
        "no-eq-null": 2,
        "no-new": 0,
        "space-before-function-paren":"off",
        "one-var":"off",
        "no-unused-vars":"warn"
    }
}
